@model CustomerNavigationModel
@using Nop.Web.Models.Customer;

@{
    string actionname = ViewContext.RouteData.GetRequiredString("controller");
    string resultName = ViewContext.RouteData.Values["action"].ToString();

    if (actionname.ToLower() == "privatemessages")
    {
        Model.SelectedTab = CustomerNavigationEnum.Privatemessages;
    }
    if (resultName == "BeYoungTOTALHEALTH")
    {
        Model.SelectedTab = CustomerNavigationEnum.BeYoungTOTALHEALTH;
    }

    if (resultName == "Social")
    {
        Model.SelectedTab = CustomerNavigationEnum.Social;
    }
    if (actionname.ToLower() == "CustomerProfile")
    {
        Model.SelectedTab = CustomerNavigationEnum.Profile;
    }
}
